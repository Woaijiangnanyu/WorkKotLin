<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        xmlns:tools="http://schemas.android.com/tools"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="#fff"
        tools:context=".policy.PolicyRectifyActivity">

    <TextView
            android:id="@+id/policy_title"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="54dp"
            android:text="用户个人信息保护政策"
            android:textColor="#333"
            android:textSize="22sp"
            android:textStyle="bold" />

    <ScrollView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@id/policy_title">

        <TextView
                android:id="@+id/link_policy"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:lineSpacingExtra="4dp"
                android:padding="32dp"
                android:text="@string/main_policy_content"
                android:textColor="#666666"
                android:textSize="16sp"
                android:textStyle="normal" />

    </ScrollView>

    <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_alignParentBottom="true"
            android:layout_marginBottom="77dp"
            android:background="#fff">

        <TextView
                android:layout_width="0dp"
                android:layout_height="44dp"
                android:layout_marginLeft="42dp"
                android:layout_marginRight="18dp"
                android:layout_weight="1"
                android:background="@drawable/button_bg_refuse"
                android:gravity="center"
                android:text="@string/main_policy_refuse"
                android:textColor="#3C9DFF"
                android:textSize="18sp" />

        <TextView
                android:layout_width="0dp"
                android:layout_height="44dp"
                android:layout_alignParentRight="true"
                android:layout_marginLeft="18dp"
                android:layout_marginRight="42dp"
                android:layout_weight="1"
                android:background="@drawable/button_bg_confirm"
                android:gravity="center"
                android:text="@string/main_policy_refuse"
                android:textColor="#fff"
                android:textSize="18sp" />
    </LinearLayout>
</RelativeLayout>